<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/alert_view_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/alert_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="@string/tip_title"
        android:textColor="@color/dark_black"
        android:textSize="@dimen/text_size_middle" />

    <TextView
        android:id="@+id/alert_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:text="@string/tip_contents"
        android:textColor="@color/dark_black"
        android:textSize="@dimen/text_size_small" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/alert_view_no_topcorner_bg"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/positive_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/alert_view_left_bottom_corner_bg"
            android:gravity="center"
            android:text="@string/is_known"
            android:textColor="@color/alert_text_color"
            android:textSize="@dimen/text_size_small" />

        <View
            android:id="@+id/line_one"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_line_bg" />

        <Button
            android:id="@+id/neutral_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/alert_view_no_corner_bg"
            android:gravity="center"
            android:text="@string/is_known"
            android:textColor="@color/alert_text_color"
            android:textSize="@dimen/text_size_small" />

        <View
            android:id="@+id/line_two"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_line_bg" />

        <Button
            android:id="@+id/negative_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/alert_view_right_bottom_corner_bg"
            android:gravity="center"
            android:text="@string/is_known"
            android:textColor="@color/alert_text_color"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>

</LinearLayout>